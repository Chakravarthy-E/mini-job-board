{
  "rewrites": [
    {
      "source": "/candidate",
      "destination": "/candidate/jobs"
    },
    {
      "source": "/candidate/jobs",
      "destination": "/candidate/jobs"
    },
    {
      "source": "/candidate/apply/:id",
      "destination": "/candidate/apply/[id]"
    },
    {
      "source": "/candidate/jobs/:id",
      "destination": "/candidate/jobs/[id]"
    },
    {
      "source": "/company/jobs",
      "destination": "/company/jobs"
    },
    {
      "source": "/company/jobs/new",
      "destination": "/company/jobs/new"
    },
    {
      "source": "/company/jobs/:id/applications",
      "destination": "/company/jobs/[id]/applications"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
